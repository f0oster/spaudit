# SharePoint Authentication Configuration
# Azure AD App-only certificate authentication
SP_SITE_URL="https://yourtenant-admin.sharepoint.com/"
SP_TENANT_ID="00000000-0000-0000-0000-000000000000"
SP_CLIENT_ID="00000000-0000-0000-0000-000000000000"
SP_CERT_PATH="./certs/spaudit.pfx"
SP_CERT_PASSWORD=""

# Database Configuration
DB_PATH="./spaudit.db"

# Database Connection Pool Configuration
DB_MAX_OPEN_CONNS="25"
DB_MAX_IDLE_CONNS="5"
DB_CONN_MAX_LIFETIME="1h"
DB_CONN_MAX_IDLE_TIME="15m"
DB_BUSY_TIMEOUT_MS="5000"
DB_ENABLE_FOREIGN_KEYS="true"
DB_ENABLE_WAL="true"
DB_STRICT_MODE="true"

# Server Configuration
HTTP_ADDR=":8080"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_OUTPUT="stdout"

# Audit Configuration
# Enable individual item-level scanning of documents and folders (default: true)
SP_AUDIT_SCAN_INDIVIDUAL_ITEMS="true"

# Skip hidden/system lists (default: true)
SP_AUDIT_SKIP_HIDDEN="true"

# Include comprehensive sharing audit (default: true)
SP_AUDIT_INCLUDE_SHARING="true"

# Retry configuration
SP_AUDIT_MAX_RETRIES="3"
SP_AUDIT_RETRY_DELAY="1000"

# Batch processing configuration
SP_AUDIT_BATCH_SIZE="100"
SP_AUDIT_TIMEOUT="300"
